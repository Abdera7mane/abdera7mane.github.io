---
import StackContainer from '../components/containers/StackContainer.astro';
---

<header>
	<StackContainer>
    <div class="banner"/>
    <div class="gradient-overlay"/>
  </StackContainer>
</header>

<style>
:root {
  --overlay-color: hsla(0, 0%, 10%, 80%);
  --gradient-overlay: linear-gradient(
      hsla(30, 100%, 45%, 70%)  0%,
      hsla(46, 100%, 5%, 100%) 100%
    );
}

header {
  width: 100%;
}

.banner,
.dark-overlay,
.gradient-overlay {
  height: 360px;
}

.banner {
  background-image: url('../assets/wallpaper.png');
  background-size: cover;
  background-position: center top;
}

.dark-overlay {
  background-color: var(--overlay-color);
  mix-blend-mode: overlay;
}

.gradient-overlay {
  mix-blend-mode: overlay;
  background: var(--gradient-overlay);
}
</style>

