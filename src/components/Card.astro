---
export interface Props {
	icon: string;
	title: string;
	body: string;
	href: string;
}

const { href, title, body, icon } = Astro.props as Props;
---

<li class="link-card">
	<a href={href} target="_blank">
		<div class="header">
			<img src={icon} height="64" width="64">
			<h3>{title}</h3>
		</div>
		<p>{body}</p>
	</a>
</li>

<style>
:root {
	--card-background: #0a0908;
	--card-shadow: 0px -28px 46px -42px var(--link-hover-color);
	--card-inner-shadow: 0px 64px 60px -33px var(--link-hover-color) inset;
}

.header {
	display: flex;
	align-items: center;
}

.link-card {
	list-style: none;
	display: flex;
	padding: 0.15rem;
	border-radius: 0.5rem;
	background-position: 100%;
	transition-property: box-shadow, -webkit-box-shadow, -moz-box-shadow;
	transition-duration: 600ms;
}

.link-card:hover {
	box-shadow: var(--card-shadow), var(--card-inner-shadow);
	-webkit-box-shadow: var(--card-shadow), var(--card-inner-shadow);
	-moz-box-shadow: var(--card-shadow), var(--card-inner-shadow);
}

.link-card > a {
	width: 100%;
	text-decoration: none;
	line-height: 1.4;
	padding: 1em 1.3em;
	border-radius: 0.35rem;
	color: var(--text-color);
	background-color: var(--card-background);
	opacity: 0.8;
}

h3 {
	margin: 0;
	transition: color 600ms cubic-bezier(0.22, 1, 0.36, 1);
	padding-left: 10px;
}

p {
	margin-top: 0.75rem;
	margin-bottom: 0;
}

h3 span {
	display: inline-block;
	transition: transform 300ms cubic-bezier(0.22, 1, 0.36, 1);
}

.link-card:is(:hover, :focus-within) + .link-card::after {
	filter: drop-shadow(0px 0px 128px #ffc400ab);
}

.link-card:is(:hover, :focus-within) h3 {
	color: var(--link-hover-color);
}

.link-card:is(:hover, :focus-within) h3 span {
	will-change: transform;
	transform: translateX(2px);
}
</style>
